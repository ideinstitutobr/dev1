# Configurações do Ambiente - SGC
# Copie este arquivo para .env e preencha com suas credenciais

# Ambiente da aplicação (development, production)
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/sgc

# Banco de Dados
DB_HOST=localhost
DB_NAME=seu_banco_de_dados
DB_USER=seu_usuario
DB_PASS=sua_senha_segura
DB_CHARSET=utf8mb4
DB_COLLATE=utf8mb4_unicode_ci

# Segurança
APP_KEY=gere_uma_chave_aleatoria_de_32_caracteres

# E-mail SMTP (se usar)
SMTP_HOST=smtp.exemplo.com
SMTP_PORT=587
SMTP_USER=seu_email@exemplo.com
SMTP_PASS=sua_senha_email
SMTP_FROM_NAME=SGC - Sistema de Gestão
SMTP_FROM_EMAIL=noreply@exemplo.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_DECAY_MINUTES=15

# Sessão
SESSION_LIFETIME=30
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax

# Cache (futuro)
CACHE_DRIVER=file
CACHE_PREFIX=sgc_

# Logs
LOG_LEVEL=debug
LOG_FILE=logs/app.log
